<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<!-- 会话工厂 -->
	<session-factory>
		<!-- Database connection settings -->
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://192.168.1.127:3306/meet</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>

		<!-- 数据库方言，根据数据库选择 -->
	    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<!--为了方便调试是否在运行hibernate时在日志中输出sql语句 -->
		<property name="hibernate.show_sql">true</property>
		<!-- 是否对日志中输出的sql语句进行格式化 -->
		<property name="hibernate.format_sql">true</property>

		<property name="hibernate.hbm2ddl.auto">update</property>
		<mapping resource="Account.hbm.xml"/>
		<mapping class="com.dong.web.action.Account"/>
		<mapping resource="AccountRole.hbm.xml"/>
		<mapping class="com.dong.web.action.AccountRole"/>
		<mapping resource="AdministrativeDivision.hbm.xml"/>
		<mapping class="com.dong.web.action.AdministrativeDivision"/>
		<mapping class="com.dong.web.action.DataCatalog"/>
		<mapping resource="DataCatalog.hbm.xml"/>
		<mapping resource="DataCatalogItem.hbm.xml"/>
		<mapping class="com.dong.web.action.DataCatalogItem"/>
		<mapping resource="LoginLogs.hbm.xml"/>
		<mapping class="com.dong.web.action.LoginLogs"/>
		<mapping resource="Menu.hbm.xml"/>
		<mapping class="com.dong.web.action.Menu"/>
		<mapping resource="OperateLogs.hbm.xml"/>
		<mapping class="com.dong.web.action.OperateLogs"/>
		<mapping resource="Org.hbm.xml"/>
		<mapping class="com.dong.web.action.Org"/>
		<mapping resource="OrgPerson.hbm.xml"/>
		<mapping class="com.dong.web.action.OrgPerson"/>
		<mapping resource="Permission.hbm.xml"/>
		<mapping class="com.dong.web.action.Permission"/>
		<mapping resource="Person.hbm.xml"/>
		<mapping class="com.dong.web.action.Person"/>
		<mapping resource="Role.hbm.xml"/>
		<mapping class="com.dong.web.action.Role"/>
		<mapping resource="RolePermission.hbm.xml"/>
		<mapping class="com.dong.web.action.RolePermission"/>

		<!-- 加载映射文件 -->

	</session-factory>
</hibernate-configuration>



